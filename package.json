{
	"name": "hex-zero",
	"version": "1.0.0",
	"description": "Hex Zero is a browser-based hexagonal puzzle game where players place septomino pieces to reduce all board tiles to zero.",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"preview": "vite preview",
		"build": "vite build",
		"lint": "eslint . --fix",
		"format": "biome format --write . && prettier --write .",
		"ci:eslint": "eslint . --format json --output-file eslint_report.json",
		"ci:prettier": "prettier --check \"src/**/*.{js,ts,css,md,json}\"",
		"ci:biome": "biome format .",
		"ci:typecheck": "tsc --noEmit",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/motlin/hex-zero.git"
	},
	"keywords": [],
	"author": "",
	"bugs": {
		"url": "https://github.com/motlin/hex-zero/issues"
	},
	"homepage": "https://github.com/motlin/hex-zero#readme",
	"devDependencies": {
		"@biomejs/biome": "^2.2.5",
		"@eslint/js": "^9.36.0",
		"@testing-library/dom": "^10.4.1",
		"@types/canvas-confetti": "^1.9.0",
		"@types/node": "^24.6.2",
		"@vitest/ui": "^3.2.4",
		"eslint": "^9.36.0",
		"eslint-config-prettier": "^10.1.8",
		"globals": "^16.4.0",
		"jiti": "^2.6.1",
		"jsdom": "^27.0.0",
		"prettier": "^3.6.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.45.0",
		"vite": "^7.1.9",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"canvas-confetti": "^1.9.3"
	}
}
