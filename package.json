{
  "name": "hex-zero",
  "version": "1.0.0",
  "description": "Hex Zero is a browser-based hexagonal puzzle game where players place septomino pieces to reduce all board tiles to zero.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "build": "vite build",
    "lint:fix": "prettier --write \"src/**/*.{js,ts,css,md,json}\" && eslint . --fix",
    "ci:eslint": "eslint . --format json --output-file eslint_report.json",
    "ci:prettier": "prettier --check \"src/**/*.{js,ts,css,md,json}\"",
    "ci:typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/motlin/hex-zero.git"
  },
  "keywords": [],
  "author": "",
  "bugs": {
    "url": "https://github.com/motlin/hex-zero/issues"
  },
  "homepage": "https://github.com/motlin/hex-zero#readme",
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@testing-library/dom": "^10.4.0",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^22.15.29",
    "@vitest/ui": "^3.2.0",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "canvas-confetti": "^1.9.3"
  }
